<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.jonathan.willimissbart">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:name="com.app.jonathan.willimissbart.Misc.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".BroadcastReceiver.TimerNotificationReceiver">
            <intent-filter>
                <action android:name="dismiss"></action>
                <action android:name="update"></action>
            </intent-filter>

        </receiver>

        <activity
            android:name="com.app.jonathan.willimissbart.Activities.Onboarding.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.jonathan.willimissbart.Activities.Onboarding.StationInputActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.app.jonathan.willimissbart.Activities.AppActivities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar2" />
    </application>

</manifest>