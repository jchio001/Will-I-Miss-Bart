<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/departures_info_blurb"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/darkGrey"
        android:textSize="24sp">
    </TextView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/white"
        card_view:contentPadding="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp"
        android:id="@+id/departure_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- deals with dynamically changing xml shenanigans -->
            <FrameLayout
                android:id="@+id/icon_wrapper"
                android:background="@drawable/black_rectangular_border"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="6dp"
                android:padding="1dp">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/subway_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/ion_android_subway"
                    android:textColor="@color/white"
                    android:textSize="36sp"/>

            </FrameLayout>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/set_alarm"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ion_android_alarm_clock"
                android:textColor="@color/darkGrey"
                android:textSize="36sp"
                android:layout_alignBaseline="@+id/icon_wrapper"
                android:layout_alignBottom="@+id/icon_wrapper"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/leaving_in_text"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/set_alarm"
                android:layout_toRightOf="@id/icon_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:textSize="22sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>