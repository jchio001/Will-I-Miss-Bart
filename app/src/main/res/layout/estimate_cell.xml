<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/departures_layout"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <View
        android:id="@+id/route_color_icon"
        android:background="@drawable/route_color_circle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="6dp"
        android:padding="5dp">
    </View>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/set_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/route_color_icon"
        android:layout_alignBottom="@+id/route_color_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/ion_android_alarm_clock"
        android:textColor="@color/darkGrey"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/leaving_in_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/set_alarm"
        android:layout_toRightOf="@id/route_color_icon"
        android:gravity="center_vertical"
        android:textColor="@color/darkGrey"
        android:textSize="22sp"/>
</RelativeLayout>